 &lt;path d="M3.9 12c0-1.71 1.39-3.1 3.1-3.1h4V7H7c-2.76.0-5 2.24-5 5s2.24 5 5 5h4v-1.9H7c-1.71.0-3.1-1.39-3.1-3.1zM8 13h8v-2H8v2zm9-6h-4v1.9h4c1.71.0 3.1 1.39 3.1 3.1s-1.39 3.1-3.1 3.1h-4V17h4c2.76.0 5-2.24 5-5s-2.24-5-5-5z">&lt;/path>
 &lt;/svg>&lt;/a>
&lt;/h2>
&lt;div class="highlight">&lt;pre tabindex="0" style="background-color:#fff;-moz-tab-size:4;-o-tab-size:4;tab-size:4;">&lt;code class="language-r" data-lang="r">&lt;span style="display:flex;">&lt;span>&lt;span style="color:#6639ba">with&lt;/span>&lt;span style="color:#1f2328">(&lt;/span>airquality&lt;span style="color:#1f2328">,&lt;/span> &lt;span style="color:#6639ba">boxplot&lt;/span>&lt;span style="color:#1f2328">(&lt;/span>Temp &lt;span style="color:#0550ae">~&lt;/span> Month&lt;span style="color:#1f2328">))&lt;/span>
&lt;/span>&lt;/span>&lt;/code>&lt;/pre>&lt;/div>&lt;img src="https://mhicks.me/blog/rmarkdown/index_files/figure-html/unnamed-chunk-1-1.png" width="672" />
&lt;div class="highlight">&lt;pre tabindex="0" style="background-color:#fff;-moz-tab-size:4;-o-tab-size:4;tab-size:4;">&lt;code class="language-r" data-lang="r">&lt;span style="display:flex;">&lt;span>&lt;span style="color:#6639ba">with&lt;/span>&lt;span style="color:#1f2328">(&lt;/span>airquality&lt;span style="color:#1f2328">,&lt;/span> &lt;span style="color:#6639ba">plot&lt;/span>&lt;span style="color:#1f2328">(&lt;/span>Ozone &lt;span style="color:#0550ae">~&lt;/span> Temp&lt;span style="color:#1f2328">))&lt;/span>
&lt;/span>&lt;/span>&lt;/code>&lt;/pre>&lt;/div>&lt;img src="https://mhicks.me/blog/rmarkdown/index_files/figure-html/unnamed-chunk-2-1.png" width="672" />
&lt;div class="highlight">&lt;pre tabindex="0" style="background-color:#fff;-moz-tab-size:4;-o-tab-size:4;tab-size:4;">&lt;code class="language-r" data-lang="r">&lt;span style="display:flex;">&lt;span>mlev &lt;span style="color:#0550ae">&amp;lt;-&lt;/span> &lt;span style="color:#6639ba">levels&lt;/span>&lt;span style="color:#1f2328">(&lt;/span>&lt;span style="color:#6639ba">with&lt;/span>&lt;span style="color:#1f2328">(&lt;/span>airquality&lt;span style="color:#1f2328">,&lt;/span> &lt;span style="color:#6639ba">as.factor&lt;/span>&lt;span style="color:#1f2328">(&lt;/span>Month&lt;span style="color:#1f2328">)))&lt;/span>
